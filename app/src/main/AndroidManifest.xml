<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anosh.christmasgiftmanager">

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddGift"
            android:label="Add Gift"
            android:launchMode="singleTop"
            android:parentActivityName=".Group_View" />
        <activity
            android:name=".AddPerson"
            android:label="Add Person"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddPerson1"
            android:label="Add Person"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddGroup"
            android:label="Add Group"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddStore"
            android:label="Add Store"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Gift_Show"
            android:label="Add Gift"
            android:launchMode="singleTop"
            android:parentActivityName=".Group_View" />
        <activity
            android:name=".Store_Tab.StoreDetails"
            android:label="Store Details"
            android:launchMode="singleTop"
            android:parentActivityName=".Group_View" />
        <activity
            android:name=".Progress_Tab.Progress_view"
            android:label="Progress view"
            android:launchMode="singleTop"
            android:parentActivityName=".Group_View" />
        <activity
            android:name=".Group_Update"
            android:launchMode="singleTop"
            android:parentActivityName=".Group_View" />
        <activity
            android:name=".Gallery"
            android:launchMode="singleTop"
            android:parentActivityName=".AddPerson" />
        <activity
            android:name=".Group_View"
            android:label="@string/title_activity_group1"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anosh.christmasgiftmanager.MainActivity" />
        </activity>
    </application>

</manifest>
